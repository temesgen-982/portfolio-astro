---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.svelte';
---

<Layout title="Contact Me">
	<section class="max-w-2xl mx-auto py-16 px-4">
		<h1 class="text-4xl font-bold text-center mb-4">Contact Me</h1>
		<p class="text-center text-gray-400 mb-2">
			Write me an email: <a href="mailto:jjohndoe@gmail.com" class="text-blue-400 hover:underline">jjohndoe@gmail.com</a>
		</p>
		<p class="text-center text-gray-400 mb-12">
			or send me a message
		</p>

		<!-- 
            This is where we render our interactive Svelte component.
            `client:load` tells Astro to ship the necessary JavaScript for this
            component to the browser as soon as the page loads.
        -->
		<ContactForm client:load />

		<div class="text-center mt-16">
			<p class="text-gray-400 mb-4">...or you can reach me at my socials</p>
			<div class="flex justify-center gap-6">
				<!-- Your social media icons would go here -->
			</div>
		</div>
	</section>
</Layout>