---
import type { CollectionEntry } from 'astro:content';
import { Github, ExternalLink } from 'lucide-svelte';

interface Props {
	entry: CollectionEntry<'project'>;
}

const { entry } = Astro.props;
const { title, description, screenshot, livesite, github, tags } = entry.data;
---

<div class="group border border-dark-slate/30 dark:border-medium-gray/30 rounded-xl overflow-hidden bg-light-gray/30 dark:bg-dark-slate/30 hover:shadow-xl transition-all duration-300 hover:-translate-y-1 flex flex-col md:flex-row-reverse h-full">
    {screenshot && (
        <div class="aspect-video md:aspect-auto w-full md:w-1/2 overflow-hidden border-b md:border-b-0 md:border-l border-dark-slate/10 dark:border-medium-gray/10">
            <img 
                src={screenshot} 
                alt={`Screenshot of ${title}`} 
                class="w-full h-full object-cover object-top transition-transform duration-500 group-hover:scale-105"
            />
        </div>
    )}
    
    <div class="p-5 flex flex-col flex-grow w-full md:w-1/2">
        <div class="flex items-start justify-between gap-3 mb-3">
            <h3 class="text-xl font-bold text-dark-slate dark:text-linen-white group-hover:text-brand-teal transition-colors">
                {title}
            </h3>
            <div class="flex gap-2 shrink-0">
                {github && (
                    <a href={github} target="_blank" rel="noopener noreferrer" class="p-2 rounded-full hover:bg-dark-slate/10 dark:hover:bg-linen-white/10 transition-colors text-dark-slate dark:text-linen-white" aria-label="View Source Code">
                        <Github size={18} />
                    </a>
                )}
                {livesite && (
                    <a href={livesite} target="_blank" rel="noopener noreferrer" class="p-2 rounded-full hover:bg-dark-slate/10 dark:hover:bg-linen-white/10 transition-colors text-dark-slate dark:text-linen-white" aria-label="Visit Live Site">
                        <ExternalLink size={18} />
                    </a>
                )}
            </div>
        </div>
        
        <p class="text-medium-gray text-sm mb-4 line-clamp-3 flex-grow">
            {description}
        </p>
        
        <div class="flex flex-wrap gap-2 mt-auto">
            {tags.map(tag => (
                <span class="px-2 py-1 text-xs font-medium rounded-md bg-brand-teal/10 text-brand-teal border border-brand-teal/20">
                    {tag}
                </span>
            ))}
        </div>
    </div>
</div>
