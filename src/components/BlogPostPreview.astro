---
import type { CollectionEntry } from 'astro:content';

interface Props {
    post: CollectionEntry<'posts'>;
}
const { post } = Astro.props;
---

<a href={`/blog/${post.slug}`} class="block group">
    {post.data.heroImage && (
        <img src={post.data.heroImage} alt={`Cover image for ${post.data.title}`} class="rounded-lg mb-4 w-full h-auto aspect-video object-cover border border-gray-800" />
    )}
    <p class="text-sm text-gray-400 flex items-center justify-between gap-4">
        <span>
            {post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </span>
    </p>
    <h2 class="text-xl font-bold mt-2 text-white group-hover:text-blue-400 transition-colors">{post.data.title}</h2>
    <p class="text-gray-300 mt-2">{post.data.description}</p>
    
    {post.data.tags && (
        <div class="mt-4 flex flex-wrap gap-2">
            {post.data.tags.map(tag => (
                <span class="text-xs font-semibold px-2 py-1 rounded bg-gray-700 text-gray-300">#{tag}</span>
            ))}
        </div>
    )}
</a>
